{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
    "public": true,
    "cleanUrls": true,
    "trailingSlash": false,
    "functions": {
        "api/*.js": {
            "runtime": "@vercel/node@3"
        }
    },
    "rewrites": [
        {
            "source": "/api/gemini",
            "destination": "/api/gemini.js"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                }
            ]
        }
    ]
}